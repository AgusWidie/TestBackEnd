                    <label for="inputText" class="col-sm-2 col-form-label" style="font-size:14px;">Daftar Ulang</label>
                    <div class="col-sm-10">
                        <input type="number" id="UangDaftarUlang" value="0" class="form-control" style="font-size:14px;" readonly>
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="inputText" class="col-sm-2 col-form-label" style="font-size:14px;">Bayar</label>
                    <div class="col-sm-10">
                        <input type="number" value="0" id="Bayar" class="form-control" onchange="onChangeBayar();" style="font-size:14px;">
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="inputText" class="col-sm-2 col-form-label" style="font-size:14px;">Kembalian</label>
                    <div class="col-sm-10">
                        <input type="number" value="0" id="Kembalian" class="form-control" style="font-size:14px;" readonly required>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" style="font-size:14px;" data-bs-dismiss="modal">Batal</button>
                <button type="submit" class="btn btn-primary" style="font-size:14px;" onclick="SaveDataDaftarUlang();">Simpan</button>
            </div>
            </form><!-- End General Form Elements -->
        </div>
    </div>
</div><!-- End Basic Modal-->

