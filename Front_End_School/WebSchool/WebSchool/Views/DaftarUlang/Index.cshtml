        $("#tabelDaftarUlang").DataTable({
            destroy: true,
            paging: true,
            searching: true
        });
    });

    GetDataDaftarUlang();

    function showTambahDaftarUlang()
    {
        
        $('#TambahDaftarUlang').modal('show');
        var IdTahunAjaran = document.getElementById("KeTahunAjaran").value;
        var KeNamaKelas = document.getElementById("KeNamaKelas").value;
        const dataSplit = KeNamaKelas.split("-");
        var Kelas = dataSplit[1].toString();

        GetDaftarUlangAddData(IdTahunAjaran, Kelas);
    }

