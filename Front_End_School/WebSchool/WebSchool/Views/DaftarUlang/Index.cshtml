                    <label for="inputText" class="col-sm-2 col-form-label" style="font-size:14px;">Ke Kelas</label>
                    <div class="col-sm-10">
                        <select class="form-select" id="KeNamaKelas" aria-label="KeNamaKelas" style="font-size:14px;" required>
                            <option selected></option>
                            @if (DataKelas.Data.Any())
                            {
                                foreach (var data in DataKelas.Data)
                                {
                                    <option value="@data.Id-@data.Kelass">@data.NamaKelas</option>
                                }
                            }
                        </select>
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="inputText" class="col-sm-2 col-form-label" style="font-size:14px;">Pembayaran</label>
                    <div class="col-sm-10">
                        <input type="text" id="NamaPembayaran" value="DaftarUlang" maxlength="15" class="form-control" style="font-size:14px;" readonly>
                    </div>
                </div>    
