<script>


    $(document).ready(function (){
        $("#tabelPenggunaRole").DataTable({
            destroy: true,
            paging: true,
            searching: true
        });
    });

    GetDataPengguna();

    function showTambahPenggunaPeran()
    {
        $('#TambahPenggunaPeran').modal('show');
    }

    function pingURL() {
        var settings = {
            cache: false,
            //dataType: "jsonp",
