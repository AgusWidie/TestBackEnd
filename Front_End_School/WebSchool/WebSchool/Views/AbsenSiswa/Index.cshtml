                        <div class="col-sm-10">
                            <input type="text" id="NamaSiswa" maxlength="50" class="form-control" style="font-size:14px;" readonly required>
                        </div>
                    </div>
                    <input type="text" id="IdTahunAjaran" class="form-control" hidden>
                    <div class="row mb-3">
                        <label for="inputText" class="col-sm-2 col-form-label" style="font-size:14px;">Tahun Ajaran</label>
                        <div class="col-sm-10">
                            <input type="text" id="TahunAjaran" maxlength="50" class="form-control" style="font-size:14px;" readonly required>
                        </div>
                    </div>
                    <input type="text" id="IdKelas" class="form-control" hidden>
                    <div class="row mb-3">
                        <label for="inputText" class="col-sm-2 col-form-label" style="font-size:14px;">Nama Kelas</label>
                        <div class="col-sm-10">
                            <input type="text" id="NamaKelas" maxlength="50" class="form-control" style="font-size:14px;" readonly required>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label for="inputText" class="col-sm-2 col-form-label" style="font-size:14px;">Tanggal Absen</label>
                        <div class="col-sm-10">
                            <input type="text" id="TanggalAbsen" class="form-control" style="font-size:14px;"  readonly>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label for="inputText" class="col-sm-2 col-form-label">Absen</label>
                        <div class="col-sm-10">
                            <select class="form-select" id="Absen" aria-label="Absen" style="font-size:14px;">
                                <option selected></option>
                                <option value="Masuk">Masuk</option>
                                <option value="Alpha">Alpha</option>
                                <option value="Izin">Izin</option>
                                <option value="Sakit">Sakit</option>
                            </select>
                        </div>
                    </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" style="font-size:14px;" data-bs-dismiss="modal">Batal</button>
                <button type="submit" class="btn btn-primary" style="font-size:14px;" onclick="SaveDataAbsenSiswa();">Simpan</button>
            </div>
            </form><!-- End General Form Elements -->
        </div>
    </div>
</div><!-- End Basic Modal-->

