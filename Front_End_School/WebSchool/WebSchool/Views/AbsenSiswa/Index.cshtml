@using WebSchool.Service.Interface;
@using System.Threading;
@using System.Threading.Tasks;
@using System.Linq;
@using System.Collections.Generic;

@inject ITahunAjarService TahunAjaranService;
@inject IKelasService KelasService;
@inject IPelajaranService PelajaranService;

@{
    CancellationToken cancellationToken = new CancellationToken();
    var DataTahunAjaran = await TahunAjaranService.ListTahunAjaran(0, cancellationToken);
    var DataKelas = await KelasService.ListKelas(0, cancellationToken);
    var DataPelajaran = await PelajaranService.ListPelajaran(0, cancellationToken);
}

<section class="section">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Data Absen Siswa</h5>
                    <br />
                    <form class="row g-3">
                        <div class="col-md-3">
                            <label for="inputText" class="col-sm-4 col-form-label" style="font-size:14px;">Tahun Ajaran :</label>
                            <select class="form-select" id="TahunAjaran2" aria-label="TahunAjaran2" style="font-size:14px;" required>
                                <option selected></option>
                                @if (DataTahunAjaran.Data.Any())
                                {
                                    foreach (var data in DataTahunAjaran.Data)
                                    {
                                        <option value="@data.Id">@data.TahunAjaran</option>
                                    }
                                }
                            </select>
                        </div>
                        <div class="col-md-3">
                            <label for="inputText" class="col-sm-4 col-form-label" style="font-size:14px;">Nama Kelas :</label>
                            <select class="form-select" id="NamaKelas2" aria-label="NamaKelas2" style="font-size:14px;" required>
                                <option selected></option>
                                @if (DataKelas.Data.Any())
                                {
                                    foreach (var data in DataKelas.Data)
                                    {
                                        <option value="@data.Id">@data.NamaKelas</option>
                                    }
                                }
                            </select>
                        </div>
                        <div class="col-md-3">
                            <label for="inputText" class="col-sm-4 col-form-label" style="font-size:14px;">Tanggal Absen :</label>
                            <input type="date" id="TanggalAbsen2" class="form-control" style="font-size:14px;">
                        </div>
                    </form>
                    <br />
                    <button type="button" class="btn btn-warning" onclick="GetDataAbsenSiswa();">Cari</button>
                    <br />
                    <br />
                    <table class="table table-striped table-bordered dt-responsive nowrap" id="tabelAbsenSiswa">
                        <thead>
                            <tr>
                                <th scope="col" style="font-size:14px;">Nama Siswa</th>
                                <th scope="col" style="font-size:14px;">Tahun Ajaran</th>
                                <th scope="col" style="font-size:14px;">Nama Kelas</th>
                                <th scope="col" style="font-size:14px;">Absen</th>
                                <th scope="col" style="font-size:14px;">Tanggal Absen</th>
                                <th scope="col" style="font-size:14px;">Aksi</th>
                            </tr>
                        </thead>
                        <tbody>
                            
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>

