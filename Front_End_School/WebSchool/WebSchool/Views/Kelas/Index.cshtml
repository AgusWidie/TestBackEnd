@using WebSchool.Service.Interface;
@using System.Threading;
@using System.Threading.Tasks;

<section class="section">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Data Kelas</h5>
                    <br />
                    <button type="button" class="btn btn-primary" onclick="showTambahKelas();">Tambah</button>
                    <br />
                    <br />
                    <table class="table table-striped table-bordered dt-responsive nowrap" id="tabelKelas">
                        <thead>
                            <tr>
                                <th scope="col" style="font-size:14px;">Id</th>
                                <th scope="col" style="font-size:14px;">Kelas</th>
                                <th scope="col" style="font-size:14px;">Nama Kelas</th>
                                <th scope="col" style="font-size:14px;">Aktif</th>
                                <th scope="col" style="font-size:14px;">Aksi</th>
                            </tr>
                        </thead>
                        <tbody>
                            
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>

<div class="modal fade" id="TambahKelas" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Tambah Kelas</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form>
            <div class="modal-body">
                     <div class="row mb-3">
                        <label for="inputText" class="col-sm-2 col-form-label" style="font-size:14px;">Kelas</label>
                        <div class="col-sm-10">
                            <input type="number" id="Kelas" class="form-control" style="font-size:14px;" required>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label for="inputText" class="col-sm-2 col-form-label" style="font-size:14px;">Nama Kelas</label>
                        <div class="col-sm-10">
                            <input type="text" id="NamaKelas" maxlength="50" class="form-control" style="font-size:14px;" required>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label for="inputText" class="col-sm-2 col-form-label" style="font-size:14px;">Aktif</label>
                        <div class="col-sm-10">
                            <select class="form-select" id="Aktif" aria-label="Aktif" style="font-size:14px;" required>
                                <option selected></option>
                                <option value="1">Aktif</option>
                                <option value="0">Tidak Aktif</option>

                            </select>
                        </div>
                    </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" style="font-size:14px;" data-bs-dismiss="modal">Batal</button>
                <button type="button" class="btn btn-primary" style="font-size:14px;" onclick="SaveDataKelas();">Simpan</button>
            </div>
            </form><!-- End General Form Elements -->
        </div>
    </div>
</div><!-- End Basic Modal-->

<div class="modal fade" id="EditKelas" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Edit Kelas</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form>
            <div class="modal-body">
                
                    <input type="text" id="Id" class="form-control" hidden>
                    <div class="row mb-3">
                        <label for="inputText" class="col-sm-2 col-form-label" style="font-size:14px;">Kelas</label>
                        <div class="col-sm-10">
                            <input type="number" id="Kelas1" class="form-control" style="font-size:14px;" required>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label for="inputText" class="col-sm-2 col-form-label" style="font-size:14px;">Nama Kelas</label>
                        <div class="col-sm-10">
                            <input type="text" id="NamaKelas1" maxlength="50" class="form-control" style="font-size:14px;" required>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label for="inputText" class="col-sm-2 col-form-label" style="font-size:14px;">Aktif</label>
                        <div class="col-sm-10">
                            <select class="form-select" id="Aktif1" aria-label="Aktif" style="font-size:14px;" required>
                                <option selected></option>
                                <option value="1">Aktif</option>
                                <option value="0">Tidak Aktif</option>

                            </select>
                        </div>
                    </div>
               
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" style="font-size:14px;" data-bs-dismiss="modal">Batal</button>
                <button type="button" class="btn btn-primary" style="font-size:14px;" onclick="UpdateDataKelas();">Simpan</button>
            </div>
            </form><!-- End General Form Elements -->
        </div>
    </div>
</div><!-- End Basic Modal-->

<link href="~/css/dataTables.bootstrap4.min.css" rel="stylesheet">
<link href="~/css/jquery-ui.min.css" rel="stylesheet">

<style>
    .table.dataTable {
        font-size: 14px;
    }
</style>

<script src="~/js/jquery-3.5.1.js"></script>
<script src="~/js/jquery-ui.min.js"></script>
<script src="~/js/jquery.dataTables.min.js"></script>
<script src="~/js/dataTables.bootstrap4.min.js"></script>

<script src="~/js/swallfire/sweetalert2.min.js"></script>
<script src="~/js/swallfire/sweetalert2.all.min.js"></script>
<script src="~/js/apps/kelas/kelas.js"></script>

<script>

    $(document).ready(function () {
        $("#tabelKelas").DataTable({
            destroy: true,
            paging: true,
            searching: true
        });
    });

    GetDataKelas();

    function showTambahKelas()
    {
        $('#TambahKelas').modal('show');
    }

