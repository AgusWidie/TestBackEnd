@using WebSchool.Service.Interface;
@using System.Threading;
@using System.Threading.Tasks;
@using System.Linq;
@using System.Collections.Generic;

@inject ITahunAjarService TahunAjaranService;
@inject IKelasService KelasService;
@inject IPelanggaranService PelanggaranService;


@{
    CancellationToken cancellationToken = new CancellationToken();
    var DataTahunAjaran = await TahunAjaranService.ListTahunAjaran(0, cancellationToken);
    var DataPelanggaran = await PelanggaranService.ListPelanggaran(0, cancellationToken);
    var DataKelas = await KelasService.ListKelas(0, cancellationToken);
}

<section class="section">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Data Pelanggaran Siswa</h5>
                    <br />
                    <form class="row g-2">
                        <div class="col-md-3">
                            <label for="inputText" class="col-sm-4 col-form-label" style="font-size:14px;">Tahun Ajaran :</label>
                            <select class="form-select" id="TahunAjaran2" aria-label="TahunAjaran2" style="font-size:14px;" required>
                                <option selected></option>
                                @if (DataTahunAjaran.Data.Any())
                                {
                                    foreach (var data in DataTahunAjaran.Data)
                                    {
                                        <option value="@data.Id">@data.TahunAjaran</option>
                                    }
                                }
                            </select>
                        </div>
                        <div class="col-md-3">
                            <label for="inputText" class="col-sm-4 col-form-label" style="font-size:14px;">Nama Kelas :</label>
                            <select class="form-select" id="NamaKelas2" aria-label="NamaKelas2" style="font-size:14px;" onchange="GetSiswaSearchData();" required>
                                <option selected></option>
                                @if (DataKelas.Data.Any())
                                {
                                    foreach (var data in DataKelas.Data)
                                    {
                                        <option value="@data.Id">@data.NamaKelas</option>
                                    }
                                }
                            </select>
                        </div>
                        <div class="col-md-3">
                            <label for="inputText" class="col-sm-4 col-form-label" style="font-size:14px;">Nama Siswa :</label>
                            <select class="form-select" id="NamaSiswa2" aria-label="NamaSiswa2" style="font-size:14px;" required>
                               
                            </select>
                        </div>
                    </form>
                    <br />
                    <div class="col-md-2">
                        <button type="button" class="btn btn-warning" onclick="GetDataPelanggaranSiswa();">Cari</button>&nbsp;&nbsp;
                        <button type="button" class="btn btn-primary" onclick="showTambahPelanggaranSiswa();">Tambah</button>
                    </div>
                    <br />
                    <br />
                    <table class="table table-striped table-bordered dt-responsive nowrap" id="tabelPelanggaranSiswa">
                        <thead>
                            <tr>
                                <th scope="col" style="font-size:14px;">Tahun Ajaran</th>
                                <th scope="col" style="font-size:14px;">Nama Kelas</th>
                                <th scope="col" style="font-size:14px;">Nama Siswa</th>
                                <th scope="col" style="font-size:14px;">Nama Pelanggaran</th>
                                <th scope="col" style="font-size:14px;">Poin</th>
                                <th scope="col" style="font-size:14px;">Deskripsi</th>
                                <th scope="col" style="font-size:14px;">Aksi</th>
                            </tr>
                        </thead>
                        <tbody>
                            
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>

<div class="modal fade" id="TambahPelanggaranSiswa" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Tambah Pelanggaran Siswa</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form>
            <div class="modal-body">
                <div class="row mb-3">
                    <label for="inputText" class="col-sm-2 col-form-label" style="font-size:14px;">Tahun Ajaran</label>
                    <div class="col-sm-10">
                        <select class="form-select" id="TahunAjaran" aria-label="TahunAjaran" style="font-size:14px;" required>
                            <option selected></option>
                            @if (DataTahunAjaran.Data.Any())
                            {
                                foreach (var data in DataTahunAjaran.Data)
                                {
                                    <option value="@data.Id">@data.TahunAjaran</option>
                                }
                            }
                        </select>
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="inputText" class="col-sm-2 col-form-label" style="font-size:14px;">Nama Kelas</label>
                    <div class="col-sm-10">
                        <select class="form-select" id="NamaKelas" aria-label="NamaKelas" style="font-size:14px;" required onchange="GetSiswaAddData();">
                            <option selected></option>
                            @if (DataKelas.Data.Any())
                            {
                                foreach (var data in DataKelas.Data)
                                {
                                    <option value="@data.Id">@data.NamaKelas</option>
                                }
                            }
                        </select>
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="inputText" class="col-sm-2 col-form-label" style="font-size:14px;">Nama Siswa</label>
                    <div class="col-sm-10">
                        <select class="form-select" id="NamaSiswa" aria-label="NamaSiswa" style="font-size:14px;" required>
                        </select>
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="inputText" class="col-sm-2 col-form-label" style="font-size:14px;">Pelanggaran</label>
                    <div class="col-sm-10">
                        <select class="form-select" id="NamaPelanggaran" aria-label="NamaPelanggaran" style="font-size:14px;" required>
                            <option selected></option>
                            @if (DataPelanggaran.Data.Any())
                            {
                                foreach (var data in DataPelanggaran.Data)
                                {
                                    <option value="@data.Id">@data.NamaPelanggaran</option>
                                }
                            }
                        </select>
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="inputText" class="col-sm-2 col-form-label" style="font-size:14px;">Deskripsi</label>
                    <div class="col-sm-10">
                        <textarea class="form-control" id="Deskripsi" maxlength="150" style="height: 60px; font-size:14px;"></textarea>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" style="font-size:14px;" data-bs-dismiss="modal">Batal</button>
                <button type="submit" class="btn btn-primary" style="font-size:14px;" onclick="SaveDataPelanggaranSiswa();">Simpan</button>
            </div>
            </form><!-- End General Form Elements -->
        </div>
    </div>
</div><!-- End Basic Modal-->

