@using WebSchool.Service.Interface;
@using WebSchool.Service;
@using System.Threading;
@using System.Linq;
@using WebSchool.Models;

@inject ILoginPenggunaService LoginData;
@inject IMenuPenggunaRoleService MenuPengguna;

@{
    CheckTokenModel CheckToken = new CheckTokenModel();
    CheckToken.NamaPengguna = "";
    CancellationToken cancellationToken;

    string NamaPengguna = await LoginData.LoginPengguna(cancellationToken);
    CheckToken.NamaPengguna = NamaPengguna;

    var MenuPenggunaData = await MenuPengguna.ListMenuPengguna(CheckToken, cancellationToken);
    Layout = null;
}

