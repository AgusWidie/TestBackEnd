                                <span>Profil</span>
                            </a>
                        </li>

                        <li>
                            <a class="dropdown-item d-flex align-items-center" asp-controller="ChangePassword" asp-action="Index">
                                <i class="bi bi-box-arrow-left"></i>
                                <span>Ganti Password</span>
                            </a>
                        </li>

                        <li>
                            <hr class="dropdown-divider">
                        </li>

                        <li>
                            <a class="dropdown-item d-flex align-items-center" onclick="LogoutPengguna();">
                                <i class="bi bi-box-arrow-right"></i>
                                <span>Keluar</span>
                            </a>
                        </li>

                    </ul><!-- End Profile Dropdown Items -->
                </li><!-- End Profile Nav -->

            </ul>
        </nav><!-- End Icons Navigation -->

    </header><!-- End Header -->
    <!-- ======= Sidebar ======= -->
    <aside id="sidebar" class="sidebar">
        <ul class="sidebar-nav" id="sidebar-nav">
            <li class="nav-item">
                <a class="nav-link " href="index.html">
                    <i class="bi bi-grid"></i>
                    <span>Dashboard</span>
                </a>
            </li><!-- End Dashboard Nav -->

            @if(MenuPenggunaData.Data.Any())
            {
                long IdMenu = 0;
                long IdMenuParent = 0;
                long IdMenuParentController = 0;
                string data = "";
                string dataUl = "";
                string Class = "";

                foreach(var DataMenu in MenuPenggunaData.Data)
                {
                    if (DataMenu.Type == "H") {
                       
                        data = "#"+ DataMenu.NamaMenu.Replace(' ', '-') + "-nav";
                        dataUl = DataMenu.NamaMenu.Replace(' ', '-') + "-nav";
                        IdMenuParent = DataMenu.IdMenuParent;
                        IdMenu = DataMenu.IdMenu;
                        Class = "bi bi-menu-button-wide";

                        if(@DataMenu.NamaMenu == "Administrasi" || @DataMenu.NamaMenu == "Absensi") {
                            Class = "bi bi-journal-text";
                        }

                        if(@DataMenu.NamaMenu == "Guru") {
                            Class = "bi bi-layout-text-window-reverse";
                        }

                        if (ViewBag.MenuController != null)
                        {
                            @foreach (var dataMenu in ViewBag.MenuController)
                            {
                                IdMenuParentController = @dataMenu.IdMenuParent;
                            }

                            if (IdMenu == IdMenuParentController && IdMenu > 0 && IdMenuParentController > 0)
                            {

                                <li class="nav-item">
                                    <a class="nav-link" data-bs-target="@data" data-bs-toggle="collapse">
                                        <i class="@Class"></i><span>@DataMenu.NamaMenu</span><i class="bi bi-chevron-down ms-auto"></i>
                                    </a>

                                    <ul id="@dataUl" class="nav-content collapse show" data-bs-parent="#sidebar-nav">
                                        @foreach (var DataMenuChild in MenuPenggunaData.Data)
                                        {
                                            IdMenuParent = DataMenuChild.IdMenuParent;
                                            if (DataMenuChild.Type == "C" && IdMenuParent != 0 && IdMenu == IdMenuParent)
                                            {
                                                <li>
                                                    <a asp-controller="@DataMenuChild.NamaController" asp-action="@DataMenuChild.NamaAction">
                                                        <i class="bi bi-circle"></i><span>@DataMenuChild.NamaMenu</span>
                                                    </a>
                                                </li>

                                            }
                                        }
                                    </ul>
                                </li>

                            }
                            else
                            {

                                <li class="nav-item">
                                    <a class="nav-link collapsed" data-bs-target="@data" data-bs-toggle="collapse">
                                        <i class="@Class"></i><span>@DataMenu.NamaMenu</span><i class="bi bi-chevron-down ms-auto"></i>
                                    </a>

                                    <ul id="@dataUl" class="nav-content collapse" data-bs-parent="#sidebar-nav">
                                        @foreach (var DataMenuChild in MenuPenggunaData.Data)
                                        {
                                            IdMenuParent = DataMenuChild.IdMenuParent;
                                            if (DataMenuChild.Type == "C" && IdMenuParent != 0 && IdMenu == IdMenuParent)
                                            {
                                                <li>
                                                    <a asp-controller="@DataMenuChild.NamaController" asp-action="@DataMenuChild.NamaAction">
                                                        <i class="bi bi-circle"></i><span>@DataMenuChild.NamaMenu</span>
                                                    </a>
                                                </li>

                                            }
                                        }
                                    </ul>
                                </li>
                            }
                        } 
                        else {

                            <li class="nav-item">
                                <a class="nav-link collapsed" data-bs-target="@data" data-bs-toggle="collapse">
                                    <i class="@Class"></i><span>@DataMenu.NamaMenu</span><i class="bi bi-chevron-down ms-auto"></i>
                                </a>

                                <ul id="@dataUl" class="nav-content collapse" data-bs-parent="#sidebar-nav">
                                    @foreach (var DataMenuChild in MenuPenggunaData.Data)
                                    {
                                        IdMenuParent = DataMenuChild.IdMenuParent;
                                        if (DataMenuChild.Type == "C" && IdMenuParent != 0 && IdMenu == IdMenuParent)
                                        {
                                            <li>
                                                <a asp-controller="@DataMenuChild.NamaController" asp-action="@DataMenuChild.NamaAction">
                                                    <i class="bi bi-circle"></i><span>@DataMenuChild.NamaMenu</span>
                                                </a>
                                            </li>

                                        }
                                    }
                                </ul>
                            </li>
                        }
                    }
                }
            }
            
        </ul>

    </aside><!-- End Sidebar-->

    <main id="main" class="main">
        @RenderBody()
    </main>

