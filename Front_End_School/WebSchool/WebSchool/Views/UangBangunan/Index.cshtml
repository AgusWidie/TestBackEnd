@using WebSchool.Service.Interface;
@using System.Threading;
@using System.Threading.Tasks;
@using System.Linq;
@using System.Collections.Generic;

@inject ITahunAjarService TahunAjaranService;
@inject IKelasService KelasService;
@inject ISiswaService SiswaService;

@{
    CancellationToken cancellationToken = new CancellationToken();
    var DataTahunAjaran = await TahunAjaranService.ListTahunAjaran(0, cancellationToken);
    var DataKelas = await KelasService.ListKelas(0, cancellationToken);
    //var DataSiswa = await SiswaService.ListSiswa(0, cancellationToken);
}

<section class="section">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Data Uang Bangunan</h5>
                    <br />
                    <form class="row g-2">
                        <div class="col-md-3">
                            <label for="inputText" class="col-sm-4 col-form-label" style="font-size:14px;">Tahun Ajaran :</label>
                            <select class="form-select" id="TahunAjaran2" aria-label="TahunAjaran2" style="font-size:14px;" required>
                            <option selected></option>
                                @if(DataTahunAjaran.Data.Any()){
                                    foreach(var data in DataTahunAjaran.Data)
                                    {
                                        <option value="@data.Id">@data.TahunAjaran</option>
                                    }
                                }
                            </select>
                        </div>
                        <div class="col-md-3">
                            <label for="inputText" class="col-sm-4 col-form-label" style="font-size:14px;">Nama Kelas :</label>
                            <select class="form-select" id="NamaKelas2" aria-label="NamaKelas2" style="font-size:14px;" onchange="GetSiswaSearchData();" required>
                            <option selected></option>
                                @if(DataKelas.Data.Any()){
                                    foreach(var data in DataKelas.Data)
                                    {
                                        <option value="@data.Id">@data.NamaKelas</option>
                                    }
                                }
                            </select>
                        </div>
                        <div class="col-md-3">
                            <label for="inputText" class="col-sm-4 col-form-label" style="font-size:14px;">Nama Siswa :</label>
                            <select class="form-select" id="NamaSiswa2" aria-label="NamaSiswa2" style="font-size:14px;">
                                
                            </select>
                        </div>
                    </form>
                    <br />
                    <form class="row g-2">
                        <div class="col-md-2">
                            <button type="button" class="btn btn-warning" onclick="GetDataUangBangunan();">Cari</button>&nbsp;&nbsp;
                            <button type="button" class="btn btn-primary" onclick="showTambahUangBangunan();">Tambah</button>
                        </div>
                        
                    </form>
                    <br />
                    <br />
                    <table class="table table-striped table-bordered dt-responsive nowrap" id="tabelUangBangunan">
                        <thead>
                            <tr>
                                <th scope="col" style="font-size:14px;">Tahun Ajaran</th>
                                <th scope="col" style="font-size:14px;">Nama Kelas</th>
                                <th scope="col" style="font-size:14px;">Nama Siswa</th>
                                <th scope="col" style="font-size:14px;">Tanggal</th>
                                <th scope="col" style="font-size:14px;">Uang Bangunan</th>
                                <th scope="col" style="font-size:14px;">Uang Bayar</th>
                                <th scope="col" style="font-size:14px;">Total Bayar</th>
                                <th scope="col" style="font-size:14px;">Sisa Bayar</th>
                                <th scope="col" style="font-size:14px;">Aksi</th>
                            </tr>
                        </thead>
                        <tbody>
                            
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>

<div class="modal fade" id="TambahUangBangunan" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Tambah Uang Bangunan</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form>
            <div class="modal-body">
                    <div class="row mb-3">
                        <label for="inputText" class="col-sm-2 col-form-label" style="font-size:14px;">Tahun Ajaran</label>
                        <div class="col-sm-10">
                            <select class="form-select" id="TahunAjaran" aria-label="TahunAjaran" style="font-size:14px;" required>
                                <option selected></option>
                                @if (DataTahunAjaran.Data.Any())
                                {
                                    foreach (var data in DataTahunAjaran.Data)
                                    {
                                        <option value="@data.Id">@data.TahunAjaran</option>
                                    }
                                }
                            </select>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label for="inputText" class="col-sm-2 col-form-label" style="font-size:14px;">Nama Kelas</label>
                        <div class="col-sm-10">
                            <select class="form-select" id="NamaKelas" aria-label="NamaKelas" style="font-size:14px;" onchange="GetSiswaAddData();" required>
                                <option selected></option>
                                @if (DataKelas.Data.Any())
                                {
                                    foreach (var data in DataKelas.Data)
                                    {
                                        <option value="@data.Id">@data.NamaKelas</option>
                                    }
                                }
                            </select>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label for="inputText" class="col-sm-2 col-form-label" style="font-size:14px;">Nama Siswa</label>
                        <div class="col-sm-10">
                            <select class="form-select" id="NamaSiswa" aria-label="NamaSiswa" style="font-size:14px;" required>
                                
                            </select>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label for="inputText" class="col-sm-2 col-form-label" style="font-size:14px;">Pembayaran</label>
                        <div class="col-sm-10">
                            <input type="text" id="NamaPembayaran" value="UangBangunan" maxlength="15" class="form-control" style="font-size:14px;" readonly>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label for="inputText" class="col-sm-2 col-form-label" style="font-size:14px;">Uang Bangunan</label>
                        <div class="col-sm-10">
                            <input type="number" id="UangBangunan" class="form-control" style="font-size:14px;" required readonly>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label for="inputText" class="col-sm-2 col-form-label" style="font-size:14px;">Bayar</label>
                        <div class="col-sm-10">
                              <input type="number" value="0" id="Bayar" class="form-control" style="font-size:14px;" onchange="onChangeBayar();" required>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label for="inputText" class="col-sm-2 col-form-label" style="font-size:14px;">Total Bayar</label>
                        <div class="col-sm-10">
                            <input type="number" value="0" id="TotalBayar" class="form-control" style="font-size:14px;" onchange="onChangeBayar();" required readonly>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label for="inputText" class="col-sm-2 col-form-label" style="font-size:14px;">Sisa Bayar</label>
                        <div class="col-sm-10">
                            <input type="number"  value="0" id="SisaBayar" class="form-control" style="font-size:14px;" required readonly>
                        </div>
                    </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" style="font-size:14px;" data-bs-dismiss="modal">Batal</button>
                <button type="submit" class="btn btn-primary" style="font-size:14px;" onclick="SaveDataUangBangunan();">Simpan</button>
            </div>
            </form><!-- End General Form Elements -->
        </div>
    </div>
</div><!-- End Basic Modal-->

