    GetDataSPP();

    function showTambahUangSPP()
    {
        $('#TambahUangSPP').modal('show');
    }

    function onChangePembayaran() 
    {
        var IdTahunAjaran = document.getElementById("TahunAjaran").value;
        var NamaKelas = document.getElementById("NamaKelas").value;
        const dataSplit = NamaKelas.split("-");
        var Kelas = dataSplit[1].toString();

        GetUangSPPAddData(parseInt(IdTahunAjaran), parseInt(Kelas));
    }


