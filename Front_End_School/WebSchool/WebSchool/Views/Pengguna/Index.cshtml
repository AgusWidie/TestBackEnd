                        <div class="col-sm-10">
                            <input type="text" id="NamaPengguna1" maxlength="50" class="form-control" style="font-size:14px;" readonly>
                        </div>
                    </div>
                    <input type="text" id="IdGuru1" class="form-control" hidden>
                    <div class="row mb-3">
                        <label for="inputText" class="col-sm-2 col-form-label" style="font-size:14px;">Nama Guru</label>
                        <div class="col-sm-10">
                            <input type="text" id="NamaGuru1" maxlength="50" class="form-control" style="font-size:14px;" readonly>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label for="Password1" class="col-sm-2 col-form-label" style="font-size:14px;">Password</label>
                        <div class="col-sm-10">
                            <input type="password" id="Password1" name="password" maxlength="15" class="form-control" style="font-size:14px;" required>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label for="inputText" class="col-sm-2 col-form-label" style="font-size:14px;">Status</label>
                        <div class="col-sm-10">
                            <select class="form-select" id="StatusPengguna1" aria-label="StatusPengguna" style="font-size:14px;" required>
                                <option selected></option>
                                <option value="Admin">Admin</option>
                                <option value="Administrasi">Administrasi</option>
                                <option value="Guru">Guru</option>
                            </select>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label for="inputText" class="col-sm-2 col-form-label" style="font-size:14px;">Email</label>
                        <div class="col-sm-10">
                            <input type="email" id="Email1" maxlength="50" class="form-control" style="font-size:14px;" required>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label for="inputText" class="col-sm-2 col-form-label" style="font-size:14px;">Deskripsi</label>
                        <div class="col-sm-10">
                            <textarea class="form-control" id="Deskripsi1" maxlength="50" style="height: 40px;font-size:14px;"></textarea>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label for="Aktif1" class="col-sm-2 col-form-label" style="font-size:14px;">Aktif</label>
                        <div class="col-sm-10">
                            <select class="form-select" id="Aktif1" aria-label="Aktif1" style="font-size:14px;" required>
                                <option selected></option>
                                <option value="1">Aktif</option>
                                <option value="0">Tidak Aktif</option>

                            </select>
                        </div>
                    </div>
               
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" style="font-size:14px;" data-bs-dismiss="modal">Batal</button>
                <button type="button" class="btn btn-primary" style="font-size:14px;" onclick="UpdateDataPengguna();">Simpan</button>
            </div>
            </form><!-- End General Form Elements -->
        </div>
    </div>
</div><!-- End Basic Modal-->

