@using WebSchool.Service.Interface;
@using System.Threading;
@using System.Threading.Tasks;

@inject IGuruService GuruService;
@{
    CancellationToken cancellationToken = new CancellationToken();
    var DataGuru = await GuruService.ListGuru(0, cancellationToken);

}

<section class="section">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Data Pengguna</h5>
                    <br />
                    <button type="button" class="btn btn-primary" onclick="showTambahPengguna();">Tambah</button>
                    <br />
                    <br />
                    <table class="table table-striped table-bordered dt-responsive nowrap" id="tabelPengguna">
                        <thead>
                            <tr>
                                <th scope="col" style="font-size:14px;">Nama Pengguna</th>
                                <th scope="col" style="font-size:14px;">Nama Guru</th>
                                <th scope="col" style="font-size:14px;">Email</th>
                                <th scope="col" style="font-size:14px;">Status Pengguna</th>
                                <th scope="col" style="font-size:14px;">Expired Password</th>
                                <th scope="col" style="font-size:14px;">Aktif</th>
                                <th scope="col" style="font-size:14px;">Aksi</th>
                            </tr>
                        </thead>
                        <tbody>
                            
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>

<div class="modal fade" id="TambahPengguna" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Tambah Pengguna</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form>
            <div class="modal-body">
               
                    <div class="row mb-3">
                        <label for="inputText" class="col-sm-2 col-form-label" style="font-size:14px;">Pengguna</label>
                        <div class="col-sm-10">
                            <input type="text" id="NamaPengguna" maxlength="50" class="form-control" style="font-size:14px;" required>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label for="inputText" class="col-sm-2 col-form-label" style="font-size:14px;">Nama Guru</label>
                        <div class="col-sm-10">
                            <select class="form-select" id="NamaGuru" aria-label="NamaGuru" style="font-size:14px;" required>
                                <option selected></option>
                                @if (DataGuru.Data.Any())
                                {
                                    foreach (var data in DataGuru.Data)
                                    {
                                        <option value="@data.Id">@data.NamaGuru</option>
                                    }
                                }
                            </select>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label for="inputText" class="col-sm-2 col-form-label" style="font-size:14px;">Password</label>
                        <div class="col-sm-10">
                            <input type="password" id="Password" name="password" maxlength="15" class="form-control" style="font-size:14px;" required>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label for="inputText" class="col-sm-2 col-form-label" style="font-size:14px;">Status</label>
                        <div class="col-sm-10">
                            <select class="form-select" id="StatusPengguna" aria-label="StatusPengguna" style="font-size:14px;" required>
                                <option selected></option>
                                <option value="Admin">Admin</option>
                                <option value="Administrasi">Administrasi</option>
                                <option value="Guru">Guru</option>
                            </select>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label for="inputText" class="col-sm-2 col-form-label" style="font-size:14px;">Email</label>
                        <div class="col-sm-10">
                            <input type="email" id="Email" maxlength="50" class="form-control" style="font-size:14px;" required>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label for="inputText" class="col-sm-2 col-form-label" style="font-size:14px;">Deskripsi</label>
                        <div class="col-sm-10">
                            <textarea class="form-control" id="Deskripsi" maxlength="50" style="height: 40px;font-size:14px;"></textarea>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label for="inputText" class="col-sm-2 col-form-label" style="font-size:14px;">Aktif</label>
                        <div class="col-sm-10">
                            <select class="form-select" id="Aktif" aria-label="Aktif" style="font-size:14px;" required>
                                <option selected></option>
                                <option value="1">Aktif</option>
                                <option value="0">Tidak Aktif</option>

                            </select>
                        </div>
                    </div>
               
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" style="font-size:14px;" data-bs-dismiss="modal">Batal</button>
                    <button type="submit" class="btn btn-primary" style="font-size:14px;" onclick="SaveDataPengguna();">Simpan</button>
            </div>
             </form><!-- End General Form Elements -->
        </div>
    </div>
</div><!-- End Basic Modal-->

<div class="modal fade" id="EditPengguna" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Edit Pengguna</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form>
            <div class="modal-body">
                
                    <input type="text" id="Id" class="form-control" hidden>
                    <div class="row mb-3">
