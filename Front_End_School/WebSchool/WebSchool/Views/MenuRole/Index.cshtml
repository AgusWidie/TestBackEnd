<script>

    $(document).ready(function () {
        $("#tabelPenggunaRole").DataTable({
            destroy: true,
            paging: true,
            searching: true
        });
    });

    function showTambahMenuPeran() {
        $('#TambahMenuPeran').modal('show');
    }

