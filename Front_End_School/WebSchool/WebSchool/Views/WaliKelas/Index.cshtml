<script src="~/js/jquery-ui.min.js"></script>
<script src="~/js/jquery.dataTables.min.js"></script>
<script src="~/js/dataTables.bootstrap4.min.js"></script>

<script src="~/js/swallfire/sweetalert2.min.js"></script>
<script src="~/js/swallfire/sweetalert2.all.min.js"></script>
<script src="~/js/apps/wali_kelas/wali_kelas.js"></script>

<script>

    $(document).ready(function (){
        $("#tabelWaliKelas").DataTable({
            destroy: true,
            paging: true,
            searching: true
        });
    });

    GetDataWaliKelas();

    function showTambahWaliKelas()
    {
        $('#TambahWaliKelas').modal('show');
    }

    function pingURL() {
